option = input("""
Please choose the project!!!
-> """)

if option == '1':
    import math

    print("""Calculator

    -Ahmad Raza """)


    def gcd(x, y):
        math.gcd(x, y)


    def absolute(x):
        return abs(x)


    def power(x, y):
        return x ** y


    def add(x, y):
        return x + y


    def subtract(x, y):
        return x - y


    def multiply(x, y):
        return x * y


    def divide(x, y):
        return x / y


    print("""
    Select operation.
    1.Add
    2.Subtract
    3.Multiply
    4.Divide
    5.Power
    6.Absolute Value(It will only use the "First no.")
    -> """)

    choice = input("Enter choice(1/2/3/4/5/6): ")
    choice.upper()

    num1 = int(input("Enter first number: "))

    num2 = int(input("Enter second number: "))

    if choice == '1':
        print(num1, " + ", num2, " = ", add(num1, num2))

    elif choice == '2':
        print(num1, " - ", num2, " = ", subtract(num1, num2))

    elif choice == '3':
        print(num1, " * ", num2, " = ", multiply(num1, num2))

    elif choice == '4':
        print(num1, "/", num2, " = ", divide(num1, num2))

    elif choice == '5':
        print(num1, " ** ", num2, " = ", power(num1, num2))

    elif choice == '6':
        print(num1, " = ", absolute(num1))

    else:
        print("Invalid Input!!!")


if option == '2':
    print("""(Alex(Beta Version) By Reyaansh Jhaveri!!!)

    """)

    name = input("""Hello my name is Alex(Beta Version)!
    I am your new personal A.I!
