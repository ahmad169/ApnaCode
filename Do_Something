    -> """)

    print(f'''Nice to meet you {name}!
    ''')

    print("""
        How May I Help You?:-

        1.Order Pizzas!
        2.Make a sentence on favourite colour
        3.Call Someone
        4.Book A Cab
        5.Message Someone
        6.Activate Car Service Reminders
        7.Book A Movie Ticket
        8.Add a Reminder
        """)

    a = input("Please Write The Task!!! (1/2/3/4/5/6/7/8) -> ")

    if a == "1":
        pizza = input("""
        Please Write The Pizza You Want To Order!!!

        (Please Write Only The Pizza's Name. Don't End It With The Word Pizza!!!)

        -> """)

        print(f"""
    Ordering A {pizza} Pizza!!!
    """)

    if a == '2':
        color = input("""
        Please Write Your Favourite Colour!!!
        """)

        print(f"""
    {name} likes the colour {color}!!!
    """)

    if a == '3':
        call = input(f"""
    Please tell me who you want to call {name}!!!
    """)

        print(f"""
    Calling {call}!!!
    """)

    if a == '4':
        cab = input("""
        Please write what Cab service would you prefer?

        1.Jugnoo
        2.Ola
        3.Uber
        4.Meru
        5.Carzonrent
        6.Savaari

        Please choose the service by writing (1/2/3/4/5/6):-

        -> 
        """)

        if cab == '1':
            print("""
            Booking A Jugnoo Cab For You It Will Reach Home In 5 Mins!!!
            """)

        if cab == '2':
            print("""
            Booking A Ola Cab For You It Will Reach Home In 5 Mins!!!
            """)

        if cab == '3':
            print("""
            Booking A Uber Cab For You It Will Reach Home In 5 Mins!!!
            """)

        if cab == '4':
            print("""
            Booking A Meru Cab For You It Will Reach Home In 5 Mins!!!
            """)

        if cab == '5':
            print("""
            Booking A Carzonrent Cab For You It Will Reach Home In 5 Mins!!!
            """)

        if cab == '6':
            print("""
            Booking A Savaari Cab For You It Will Reach Home In 5 Mins!!!
            """)

    if a == '5':
        reciever = input("""
        Please Write Whom You Want To Send The Message !!!

        -> 
        """)

        message = input(""""
        Please Write Your Message!!!

        -> 
        """)

        print(f"""
    Sending Message to {reciever}!!!
    """)

    if a == '6':
        print("""
        Car Reminders Activated!!!
        """)

    if a == '7':
        movie = input("""
        Please Write Which Movie You Want To See!!!
        """)

        timing = input("""
        Please Write The Time You Want To Book The Show!!!
        """)

        tickets = input("""4
        Please Write How Many Tickets You Want To Buy!!!
        """)

        print(f"""
    Booked {tickets} for {movie} at {timing}!!!
    """)

    if a == '8':
        note = input("""
        Please Write Your Note!!!

        -> 
        """)

        date = input("""
        Please Set The Date Of The Reminder!!! 

        -> 
        """)

        time = input("""
        Please Set Time Of The Reminder!!!
        """)

        print(f"""
        Reminder Set For Date: {date} And Time: {time}
        """)

    else:
        print("""
        I don't Understand That!!!
        """)

    print("""
    Thank You For Trying Alex(Beta Version)!!!

    -Ahmad Raza
    """)

